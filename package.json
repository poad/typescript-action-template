{
  "name": "typescript-action",
  "version": "0.0.1",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format-check": "biome format src",
    "format:fix": "biome format --write src",
    "style:check": "biome check src",
    "style:fix": "biome check --apply-unsafe src",
    "lint": "pnpm run --parallel /.*:check/",
    "lint-fix": "pnpm run /.*:fix/",
    "test": "NODE_ENV=test jest --coverage --passWithNoTests",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "prepackage": "pnpm build",
    "prebuild": "pnpm clean && pnpm lint-fix",
    "preclean": "pnpm install",
    "all": "pnpm build && pnpm lint && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.7.28",
    "@swc/helpers": "^0.5.13",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.16.10",
    "@vercel/ncc": "^0.38.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "regenerator-runtime": "^0.14.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(?:.pnpm/)?.+)"
    ]
  },
  "packageManager": "pnpm@9.12.0+sha512.4abf725084d7bcbafbd728bfc7bee61f2f791f977fd87542b3579dcb23504d170d46337945e4c66485cd12d588a0c0e570ed9c477e7ccdd8507cf05f3f92eaca"
}

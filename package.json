{
  "name": "typescript-action",
  "version": "0.0.1",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint-fix": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run --silent=false --coverage",
    "package": "ncc build --source-map --license licenses.txt -m -q --target es2023",
    "clean": "rm -rf dist",
    "prepackage": "pnpm build",
    "prebuild": "pnpm clean && pnpm lint-fix",
    "preclean": "pnpm install",
    "all": "pnpm build && pnpm lint && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.10.1",
    "@stylistic/eslint-plugin-js": "^2.10.1",
    "@stylistic/eslint-plugin-plus": "^2.10.1",
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/node": "^22.9.0",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.14.0",
    "eslint-plugin-github": "^5.0.2",
    "js-yaml": "^4.1.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5"
  },
  "packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a"
}

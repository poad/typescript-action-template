{
  "name": "typescript-action",
  "version": "0.0.1",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format-check": "biome format src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check-fix": "biome check --apply src",
    "lint": "pnpm format-check && pnpm check",
    "lint-fix": "pnpm format && pnpm check-fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "pnpm build && pnpm format && pnpm lint && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@biomejs/biome": "1.0.0",
    "@jest/globals": "^29.6.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.82",
    "@swc/helpers": "^0.5.1",
    "@swc/jest": "^0.2.29",
    "@types/node": "^20.5.9",
    "@vercel/ncc": "^0.36.1",
    "jest": "^29.6.4",
    "js-yaml": "^4.1.0",
    "regenerator-runtime": "^0.14.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.7.1"
  }
}
